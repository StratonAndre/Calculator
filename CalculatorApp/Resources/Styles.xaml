<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Style applied to all buttons by default -->
    <Style TargetType="Button">
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="MinWidth" Value="40"/>
        <Setter Property="MinHeight" Value="30"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>
    
    <!-- Style applied to all labels by default -->
    <Style TargetType="Label">
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <!-- Style applied to all text blocks by default -->
    <Style TargetType="TextBlock">
        <Setter Property="Margin" Value="2"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <!-- Style applied to all radio buttons by default -->
    <Style TargetType="RadioButton">
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <!-- Style applied to all menus by default -->
    <Style TargetType="Menu">
        <Setter Property="Background" Value="{DynamicResource MenuBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
    </Style>
    
    <!-- Style applied to all menu items by default -->
    <Style TargetType="MenuItem">
        <Setter Property="Background" Value="{DynamicResource MenuBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
    </Style>
    
    <!-- Style applied to all grid panels by default -->
    <Style TargetType="Grid">
        <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
    </Style>
    
    <!-- Style explicitly applied to equals button -->
    <Style x:Key="EqualsButton" TargetType="Button" BasedOn="{StaticResource EqualsButtonStyle}">
        <Setter Property="Grid.RowSpan" Value="2"/>
    </Style>
    
    <!-- Style explicitly applied to mode panels -->
    <Style x:Key="ModePanel" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Margin" Value="5"/>
    </Style>
    
    <!-- Style explicitly applied to memory panel -->
    <Style x:Key="MemoryPanel" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="5"/>
    </Style>
    
    <!-- Style explicitly applied to memory popup -->
    <Style x:Key="MemoryPopup" TargetType="Popup">
        <Setter Property="StaysOpen" Value="False"/>
        <Setter Property="Placement" Value="Bottom"/>
        <Setter Property="AllowsTransparency" Value="True"/>
    </Style>
    
    <!-- Style explicitly applied to memory list box -->
    <Style x:Key="MemoryListBox" TargetType="ListBox">
        <Setter Property="Background" Value="{DynamicResource DisplayBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource DisplayTextBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Width" Value="200"/>
        <Setter Property="MaxHeight" Value="300"/>
    </Style>
</ResourceDictionary>